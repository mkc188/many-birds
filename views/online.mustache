<!DOCTYPE html>
<html lang="en">
    {{>header}}
    <body>
        {{>navbar}}

        <!-- Content -->
        <div id="online-content" class="container">
            <p class="lead site-title hidden-xs">Online Multiplayer</p>

            <!-- Gameplay -->
            <div id="online-gameplay" class="col-sm-8"><div id="online-gameplay-container"></div></div>

            <!-- Weekly tournament ranking -->
            <div id="online-tournament" class="hidden-xs col-sm-4">
                <table class="online-tournament-ranking table">
                    <thead>
                    <tr>
                        <th class="title-rank">#</th>
                        <th class="title-score" colspan="2">
                            <button type="button" class="btn btn-primary tournament-invite">Invite friends</button>
                            <button type="button" class="btn btn-default tournament-refresh"><span class="glyphicon glyphicon-refresh"></span></button>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                        <tr><td colspan="3"><div class="progress progress-striped active online-tournament-loading"><div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width: 70%"></div></div></td></tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- success-colored modal -->
        <div class="modal fade" id="success-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog success-danger modal-sm">
                <div class="modal-content panel-success">
                    <div class="modal-header panel-heading">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Congratulation</h4>
                    </div>
                    <div class="modal-body" id="success-message">
                        <p>You obtained new achievements:</p>
                        <div id="achievement-list"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-success view-achievement">View my achievements</button>
                    </div>
                </div>
            </div>
        </div>

        {{>footer}}

        <!-- Page javascript -->
        <script type="text/javascript" src="js/phaser.min.js"></script>
        <script type="text/javascript" src="js/ui.tpl.js"></script>
        <script type="text/javascript" src="js/ui.online.js"></script>
        <script type="text/javascript" src="js/game.online.js"></script>
        <script type="text/javascript">
        // start initialization
        $(document).ready(function() {
            online.init();
        });
        </script>
        </body>
</html>
