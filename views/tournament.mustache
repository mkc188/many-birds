<!DOCTYPE html>
<html lang="en">
    {{>header}}
    <body>
        {{>navbar}}

        <!-- Content -->
        <div class="container">
            <p class="lead site-title">Weekly Tournament Top {{top-count}}</p>
            <div class="row">
                <div class="col-md-1 hidden-xs hidden-sm"></div>
                <div class="col-md-10 col-sm-12">
                    <table class="tournament-ranking table">
                        <thead>
                        <tr>
                            <th class="title-rank">#</th>
                            <th class="title-score" colspan="4"><button type="button" class="btn btn-primary tournament-invite">Invite friends</button>
                                <button type="button" class="btn btn-default tournament-refresh"><span class="glyphicon glyphicon-refresh"></span></button>
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                            <tr><td colspan="2"><div class="progress progress-striped active tournament-loading"><div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width: 70%"></div></div></td></tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-sm-2 hidden-xs"></div>
            </div>
        </div>

        {{>footer}}

        <!-- Page CSS -->
        <link rel="stylesheet" type="text/css" href="css/shop.css">

        <!-- Page javascript -->
        <script type="text/javascript" src="js/ui.tpl.js"></script>
        <script type="text/javascript" src="js/ui.tournament.js"></script>
        <script type="text/javascript">
        // start initialization
        $(document).ready(function() {
            tournament.init();
        });
        </script>
    </body>
</html>
